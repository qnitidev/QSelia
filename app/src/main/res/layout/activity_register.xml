<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView

                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/colorNextButton"
                android:text="Register Your Account" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/enName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textboxcornerwhite"
                    android:padding="10dp"
                    android:ems="10"
                    android:textSize="18dp"
                    android:hint="Enter Your Name"
                    android:inputType="textPersonName"
                    />

                <EditText
                    android:id="@+id/enPhone"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textboxcornerwhite"
                    android:padding="10dp"
                    android:ems="10"
                    android:textSize="18dp"
                    android:hint="Enter Your Phone Number"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/enEmail"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textboxcornerwhite"
                    android:padding="10dp"
                    android:ems="10"
                    android:textSize="18dp"
                    android:hint="Enter Your Email"
                    android:inputType="textEmailAddress" />

                <!--<EditText
                    android:id="@+id/enAddress"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textboxcornerwhite"
                    android:padding="10dp"
                    android:ems="10"
                    android:textSize="18dp"
                    android:hint="Enter Your Address"
                    android:inputType="text" /> -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:hintEnabled="false"
                    android:layout_marginTop="20dp"
                    app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/enPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textboxcornerwhite"
                    android:padding="10dp"
                    android:ems="10"
                    android:textSize="18dp"
                    android:hint="Enter Your Password"
                    android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:hintEnabled="false"
                    android:layout_marginTop="20dp"
                    app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/enConfirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textboxcornerwhite"
                    android:padding="10dp"
                    android:ems="10"
                    android:textSize="18dp"
                    android:hint="Confirm Your Password"
                    android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <CheckBox
                    android:id="@+id/term"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:buttonTint="@color/colorDeepBlue"
                    android:text="Click here to read terms and conditions before proceeding"
                    app:buttonTint="@color/colorDeepBlue" />

            </LinearLayout>

            <Button
                android:layout_marginTop="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="10dp"
                android:id="@+id/registerBtn"
                android:textColor="#ffff"
                android:background="@drawable/buttoncornerbluegrad"
                android:textAlignment="center"
                android:textSize="14dp"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>